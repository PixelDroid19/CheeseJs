{
  "id": "cheesejs-yaml-support",
  "name": "YAML Language Support",
  "version": "1.0.0",
  "description": "Adds YAML syntax highlighting and language features to CheeseJS",
  "author": {
    "name": "CheeseJS Team",
    "email": "plugins@cheesejs.dev"
  },
  "main": "index.js",
  "engines": {
    "cheesejs": ">=1.0.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "yaml",
        "name": "YAML",
        "extensions": [".yaml", ".yml"],
        "configuration": {
          "comments": {
            "lineComment": "#"
          },
          "brackets": [
            ["{", "}"],
            ["[", "]"]
          ],
          "autoClosingPairs": [
            {
              "open": "{",
              "close": "}"
            },
            {
              "open": "[",
              "close": "]"
            },
            {
              "open": "\"",
              "close": "\""
            },
            {
              "open": "'",
              "close": "'"
            }
          ],
          "surroundingPairs": [
            {
              "open": "{",
              "close": "}"
            },
            {
              "open": "[",
              "close": "]"
            },
            {
              "open": "\"",
              "close": "\""
            },
            {
              "open": "'",
              "close": "'"
            }
          ]
        }
      }
    ]
  }
}
